<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <NumberPicker
            android:id="@+id/fragment_dialog_duration_number_picker_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" : "
            />

        <NumberPicker
            android:id="@+id/fragment_dialog_duration_number_picker_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/fragment_dialog_duration_cancellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:paddingEnd="32dp"
            android:clickable="true"
            android:text="ANNULER"/>

        <TextView
            android:id="@+id/fragment_dialog_duration_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:text="OK"
            />

    </LinearLayout>

</LinearLayout>